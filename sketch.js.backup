// Base Tool class
class Tool {
    constructor(type) {
        this.type = type;
        this.x = width / 2;
        this.y = height - 50;
        this.width = 50;
        this.height = 50;
        this.level = 1;
    }

    draw() {
        push();
        imageMode(CENTER);
        let img;
        switch(this.type) {
            case 'toothpaste':
                img = toothpasteToolImg;
                break;
            case 'mouthwash':
                img = mouthwashToolImg;
                break;
            case 'floss':
                img = flossToolImg;
                break;
            case 'toothbrush':
                img = toothbrushToolImg;
                break;
        }
        if (img) {
            image(img, this.x, this.y, this.width, this.height);
        }
        pop();
    }

    fire() {
        // Overridden by subclasses
    }
}

